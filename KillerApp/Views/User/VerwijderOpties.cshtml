@using killerAppSemester2.Models
@model List<Optie>
@{
    ViewBag.Title = "VerwijderOpties";
}

<h2>VerwijderOpties</h2>

@foreach (Optie o in Model)
{
    <ul>
        <li>@o.Naam</li>
        <li>@o.Beschrijving</li>
        <li>Prijs €@o.Prijs</li>
        <li><img src=@o.Filepath /></li>
        <li><a href=@Url.Action("VerwijderOptie", new { id = o.Id })>Verwijder van uw auto</a></li>
    </ul>
}
<h5><a href=@Url.Action("Stop")>terug</a></h5>