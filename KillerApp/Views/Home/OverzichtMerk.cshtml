@using killerAppSemester2.Models
@model List<Merk>
@{
    ViewBag.Title = "OverzichtMerk";
}
<style>
    div.gallery {
        margin: 5px;
        border: 1px solid #ccc;
        float: left;
        width: 180px;
        margin-right: 10%;
        margin-bottom: 20px;
    }

        div.gallery:hover {
            border: 1px solid #777;
        }

        div.gallery img {
            width: 100%;
            height: auto;
        }

    div.desc {
        padding: 15px;
        text-align: center;
    }

    footer {
        margin-top: 60%;
    }
</style>
<p>
    <h2>OverzichtMerk</h2>



    @foreach (Merk m in Model)
    {
        <div class="gallery">
            <a href=@Url.Action("OverzichtModel", new { @naam = m.Naam })>
                <img src=@m.Filenaam width="300" height="200">
            </a>
            <div class="desc">@m.Naam</div>
        </div>
    }
</p>
<p>
    <h2>Overzicht</h2>
    <ul>
        <li><button class="btn-default"><a href=@Url.Action("OverzichtKleuren")>Kleuren</a></button></li>

    </ul>
</p>